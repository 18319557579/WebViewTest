<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".brand_new.HomeActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="50dp">

    <ImageView
        android:id="@+id/wv_iv_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/wv_browser_icon"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/wv_ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_below="@id/wv_iv_icon"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/wv_iv_start_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/wv_search"/>

        <EditText
            android:id="@+id/wv_et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>




    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wv_ll_search"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/wv_btn_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳京东"/>

        <Button
            android:id="@+id/wv_btn_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳百度"/>

        <Button
            android:id="@+id/wv_btn_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳淘宝"/>

        <Button
            android:id="@+id/wv_btn_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳小红书"/>


    </LinearLayout>





</RelativeLayout>