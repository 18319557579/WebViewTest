<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".brand_new.WebViewContainerActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/wv_rl_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/wv_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="这是占位的内容这是占位的内容这是占位的内容这是占位的内容这是占位的内容这是占位的内容这是占位的内容这是占位的内容"
            android:layout_centerVertical="true"
            android:textColor="#575757"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:ellipsize="end"

            android:layout_toLeftOf="@id/wv_iv_interrupt"
            android:layout_alignParentLeft="true"/>

<!--        <ImageView
            android:id="@+id/wv_iv_refresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="7dp"

            android:src="@drawable/refresh"

            android:layout_toLeftOf="@id/wv_iv_interrupt"
            android:layout_centerVertical="true"/>-->

        <ImageView
            android:id="@+id/wv_iv_interrupt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="7dp"

            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />


        <ProgressBar
            android:id="@+id/wv_pb_progress"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:visibility="visible"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/wv_rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wv_rl_head"
        android:layout_above="@id/wv_ll_foot"/>

    <LinearLayout
        android:id="@+id/wv_ll_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/wv_iv_back"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:src="@drawable/wv_back"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="7dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="7dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="7dp"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="7dp"/>

    </LinearLayout>




</RelativeLayout>